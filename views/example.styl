.arrows
  font-size 1.25em
  position absolute
  width 100%
  height 100%
  display flex
  align-items center
  justify-content space-between
  i
    padding .4em
    cursor pointer
    position relative
    background red
    z-index 1
    box-shadow 0 .1em .1em 0 rgba(0, 0, 0, .2)
    @extend .borderStyle
    &:active
      box-shadow 0 0 .1em 0 rgba(0, 0, 0, .2)
      transform scale(.9)
    &:first-child
      left -.75em
    &:last-child
      left .75em
.slider
  i, .dot
    background #eee
    color #555
    transition .5s ease
    &:hover
      transition .25s ease
      background mainColor
      color #fff