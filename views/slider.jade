doctype html
head
    link(rel='stylesheet' href='slider.css')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
body
    .slider#banner
        .autoSlider
            .value
        .slides
            -for(var i = 5; --i;)
                img(src="imgs/#{i}.jpg")

    .slider#objects
        .arrows
            i.fa.fa-angle-left
        span.right
            i.fa.fa-angle-right
    script(src='hammer.min.js')
    script(src='slider.js')