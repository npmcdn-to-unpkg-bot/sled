.noSelect
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

.borderStyle
  border .1em solid rgba(120, 102, 96, 0.4)

.maxWidth
  width 100% !important
  animation lineLoader ease

mainColor = #EE3326

html
  box-sizing border-box
*
  box-sizing inherit

@media screen and (max-width: 630px)
  .slide
    width 100% !important

i, .dot
  background #eee
  color #555
  transition .5s ease
  &:hover
    transition .25s ease
    background mainColor
    color #fff
.dots
  width 100%
  height 1.25em
  z-index 2
  position absolute
  bottom -1.5em
  text-align center
  .dot
    cursor pointer
    margin 0 .25em
    box-shadow 0 .1em .1em 0 rgba(0, 0, 0, .2)
    display inline-block
    @extend .borderStyle
    height 1.25em
    width 1.25em
    border-radius 50%
@keyframes lineLoader
  from
    width 0

.slider
  overflow hidden
  .slides
    position relative
    img
      position absolute
      width 100%
      z-index -1
      &:first-child
        position relative

.autoSlider
  width 100%
  height .2em
  .value
    width 5%
    height 100%
    background mainColor

#banner
  width 100%