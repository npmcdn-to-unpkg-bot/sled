.noSelect
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

.borderStyle
  border .1em solid rgba(120, 102, 96, 0.4)

.maxWidth
  width 100% !important
  animation lineLoader ease

mainColor = #EE3326

html
  box-sizing border-box
*
  box-sizing inherit

.dots
  width 100%
  height 1.25em
  z-index 2
  position absolute
  bottom -1.5em
  text-align center
  .dot
    cursor pointer
    margin 0 .25em
    box-shadow 0 .1em .1em 0 rgba(0, 0, 0, .2)
    display inline-block
    @extend .borderStyle
    height 1.25em
    width 1.25em
    border-radius 50%

.slider, .slider-x
  position relative
  .slides
    cursor pointer
    overflow hidden
    position relative
    .slide
      position absolute
      top 0
      left 0
      width 100%
      z-index -2
      display flex
      align-items center
      justify-content center
      transform translateX(100%)
      transition 1s ease
      &:first-child
        position relative
        transform translateX(0)

.autoSlider
  width 100%
  height .2em
  .value
    width 0
    height 100%
    background mainColor

.dualView
  .slide
    > *
      width 50%
      transform translateX(0%) !important

#banner
  width 100%

.fas
  flex-grow 1
  height 100%
  margin 0 .25em
  border .1em solid #777

#objects
  margin auto
  width 40em
  .slides
    .slide
      display flex
      height 20em