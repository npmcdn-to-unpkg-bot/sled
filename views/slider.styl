.noSelect
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

.borderStyle
  border .1em solid rgba(120, 102, 96, 0.4)

.maxWidth
  width 100% !important
  animation lineLoader ease

mainColor = #EE3326

html
  box-sizing border-box
*
  box-sizing inherit

@media screen and (max-width: 630px)
  .slide
    width 100% !important

#banner
  height auto
  width 100%
  & > span
    display none
  .slidesCont
    height auto
    position relative
  .slide
    width 100%

.slider
  width 30em
  height 15em
  position relative
  margin-bottom 2.3em
  @extend .noSelect
  .slidesCont
    width 100%
    height 100%
    position absolute
    overflow hidden
  .slides
    transition 1s cubic-bezier(0.785, 0.135, 0.150, 0.860)
    cursor pointer
    position relative
    font-size 0
    white-space nowrap
    .slide
      width 50%
      display inline-block
      box-sizing border-box
      transition 1s ease
      margin 0
      position relative
      box-shadow 0 .1em .1em 0 rgba(0, 0, 0, .2)
      & > div
        font-size 1rem
        height 100%
        width 100%
        padding .25em
        div
          height 100%
          width 100%
          background #eee
          @extend .borderStyle
      img
        top 0
        width auto
        max-width 100%
        height auto
  .sliderLoader
    background rgba(255, 255, 255, .25)
    width 100%
    height .25em
    position absolute
    top 0
    .value
      background mainColor
      height 100%
      width 0
  & > span
    pointer-events none
    position absolute
    height 55%
    width 100%
    z-index 1
    &.right
      & > i
        left auto
        right -.5em
    i
      pointer-events visible
      position absolute
      bottom 0
      left -.5em
      padding .4em
      margin (@padding / 2)
      cursor pointer
      box-shadow 0 .1em .1em 0 rgba(0, 0, 0, .2)
      @extend .borderStyle
      &:active
        box-shadow 0 0 .1em 0 rgba(0, 0, 0, .2)
        transform scale(.9)
i, .dot
  background #eee
  color #555
  transition .5s ease
  &:hover
    transition .25s ease
    background mainColor
    color #fff
.dots
  width 100%
  height 1.25em
  z-index 2
  position absolute
  bottom -1.5em
  text-align center
  .dot
    cursor pointer
    margin 0 .25em
    box-shadow 0 .1em .1em 0 rgba(0, 0, 0, .2)
    display inline-block
    @extend .borderStyle
    height 1.25em
    width 1.25em
    border-radius 50%
@keyframes lineLoader
  from
    width 0